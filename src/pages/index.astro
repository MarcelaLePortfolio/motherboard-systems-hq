---
import HelloReact from "../components/HelloReact.tsx";
import OpsStreamTickerWrapper from "../components/OpsStreamTickerWrapper.astro";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Motherboard Dash</title>
    <style>
      body {
        background: #fff;
        color: #111;
        font-family: system-ui, sans-serif;
        padding: 2rem;
      }

      .header {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
      }

      .subheader {
        text-align: center;
        font-size: 0.95rem;
        color: #666;
        margin-top: 0.25rem;
      }

      .console-box {
        background: #fafafa;
        border-radius: 1rem;
        padding: 2rem;
        max-width: 720px;
        margin: 2rem auto;
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.05);
      }

      .chat-wrapper {
        background: #fff;
        border-radius: 0.75rem;
        border: 1px solid #ddd;
        margin-bottom: 1.5rem;
        overflow: hidden;
      }

      .chat-message {
        padding: 1rem;
        font-size: 0.95rem;
        border-bottom: 1px solid #eee;
      }

      .chat-input {
        display: flex;
        padding: 1rem;
        border-top: 1px solid #eee;
      }

      .chat-input input {
        flex: 1;
        padding: 0.75rem 1rem;
        border: 1px solid #ccc;
        border-radius: 0.5rem 0 0 0.5rem;
        outline: none;
      }

      .chat-input button {
        background: #5b21b6;
        color: white;
        border: none;
        border-radius: 0 0.5rem 0.5rem 0;
        padding: 0 1.25rem;
        cursor: pointer;
        font-size: 1.25rem;
      }

      .hello-box {
        background: #e5e7eb;
        padding: 0.5rem 1rem;
        border-radius: 0.5rem;
        font-size: 0.875rem;
        color: #444;
        margin-bottom: 1.5rem;
      }

      .ticker-bar {
        display: flex;
        justify-content: center;
        margin: 2rem 0;
      }

      .tab-row {
        display: flex;
        justify-content: center;
        gap: 2rem;
        font-weight: 500;
        margin-top: 1rem;
      }

      .tab-row span.active {
        color: #5b21b6;
        border-bottom: 2px solid #5b21b6;
        padding-bottom: 0.25rem;
      }

      .tracker {
        margin-top: 2rem;
      }

      .tracker-title {
        font-weight: bold;
        margin-bottom: 1rem;
      }

      .tracker ul {
        list-style: none;
        padding: 0;
      }

      .tracker li {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
        font-size: 1rem;
      }

      .tracker li span {
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .tracker li button {
        font-size: 0.875rem;
        background: #f3f4f6;
        border: 1px solid #ccc;
        padding: 0.25rem 0.75rem;
        border-radius: 0.25rem;
        cursor: pointer;
      }

      .footer {
        text-align: center;
        margin-top: 3rem;
        font-size: 0.8rem;
        color: #999;
      }
    </style>
  </head>
