---
import ChatbotWrapper from "../components/ChatbotWrapper.astro";
import ProjectTracker from "../components/ProjectTracker.tsx";
---

<html lang="en">
  <head>
    <title>Motherboard Dash</title>
    <meta charset="UTF-8" />
  </head>
  <body class="bg-gray-100 text-center py-10 font-sans">
    <main class="max-w-2xl mx-auto space-y-8">
      <div>
        <h1 class="text-3xl font-bold">Motherboard Dash</h1>
        <p class="text-lg text-gray-600">Command Console</p>
      </div>

      <ChatbotWrapper />

      <div class="bg-black text-white font-mono text-sm py-2 px-4 rounded shadow">
        LIVE OP LOG: Systems nominal • AI Core synced • Dashboard stable
      </div>

      <div class="p-6 rounded-xl bg-white shadow space-y-6">
        <div class="flex justify-center gap-6 mb-2 text-sm font-medium">
          <span class="text-purple-600 underline">Project Activity</span>
          <span class="text-gray-400">Tasks</span>
          <span class="text-gray-400">Settings</span>
        </div>
        <div class="space-y-4 text-left">
          <div class="flex justify-between items-center">
            <div class="flex items-center gap-2">
              <span class="h-3 w-3 rounded-full bg-blue-500"></span>
              <span class="text-gray-800">Design new homepage</span>
            </div>
            <button class="px-3 py-1 border rounded-md text-sm text-gray-700 hover:bg-gray-100">
              Request Modification
            </button>
          </div>
          <div class="flex justify-between items-center">
            <div class="flex items-center gap-2">
              <span class="h-3 w-3 rounded-full bg-indigo-500"></span>
              <span class="text-gray-800">Prepare investor presentation</span>
            </div>
            <button class="px-3 py-1 border rounded-md text-sm text-gray-700 hover:bg-gray-100">
              Request Modification
            </button>
          </div>
          <div class="flex justify-between items-center">
            <div class="flex items-center gap-2">
              <span class="h-3 w-3 rounded-full bg-teal-500"></span>
              <span class="text-gray-800">Implement authentication</span>
            </div>
            <button class="px-3 py-1 border rounded-md text-sm text-gray-700 hover:bg-gray-100">
              Request Modification
            </button>
          </div>
          <div class="flex justify-between items-center">
            <div class="flex items-center gap-2">
              <span class="h-3 w-3 rounded-full bg-gray-400"></span>
              <span class="text-gray-800">Conduct user interviews</span>
            </div>
            <button class="px-3 py-1 border rounded-md text-sm text-gray-700 hover:bg-gray-100">
              Request Modification
            </button>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
