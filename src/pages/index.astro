---
import ChatbotWrapper from '../components/ChatbotWrapper.astro'
import OpsStatus from '../components/OpsStatus.tsx'
import ProjectTabs from '../components/ProjectTabs.tsx'
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Motherboard Dash</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body style="background-color: #f7f7f7; font-family: system-ui, sans-serif; margin: 0; padding: 4rem 0;">
    <div style="background: white; max-width: 800px; margin: 0 auto; border-radius: 16px; padding: 2rem; box-shadow: 0 2px 12px rgba(0,0,0,0.05);">
      <h1 style="text-align: center; font-size: 2rem; font-weight: 700; margin-bottom: 0.5rem;">Motherboard Dash</h1>
      <p style="text-align: center; color: #666; font-style: italic; margin-top: 0;">Command Console</p>

      <div style="margin-top: 2rem;">
        <ChatbotWrapper />
      </div>

      <div style="margin-top: 2.5rem;">
        <OpsStatus />
      </div>

      <div style="margin-top: 2rem;">
        <ProjectTabs />
      </div>
    </div>
  </body>
</html>
