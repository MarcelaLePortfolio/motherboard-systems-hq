---
import OpsStreamTickerWrapper from "../components/OpsStreamTickerWrapper.astro";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Motherboard Dash</title>
    <meta charset="UTF-8" />
    <style>
      body {
        margin: 0;
        font-family: system-ui, sans-serif;
        background: #f8f8f8;
        color: #111;
      }
      .frame {
        max-width: 840px;
        margin: 0 auto;
        padding: 2rem;
        background: white;
        box-shadow: 0 0 0 1px #e0e0e0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
      }
      .title {
        font-size: 1.75rem;
        text-align: center;
        margin-bottom: 0.25rem;
      }
      .subtitle {
        font-size: 1rem;
        text-align: center;
        color: #666;
        margin-bottom: 2rem;
      }
      .chatbot-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
      }
      .chatbot-body {
        flex: 1;
        overflow-y: auto;
        padding: 1rem;
        background: #fafafa;
      }
      .chatbot-input {
        border-top: 1px solid #ddd;
        padding: 1rem;
        background: white;
      }
      textarea {
        width: 100%;
        resize: none;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 0.5rem;
        font-family: inherit;
      }
    </style>
  </head>
  <body>
    <div class="frame">
      <div class="title">Motherboard Dash</div>
      <div class="subtitle">Command Console</div>

      <div class="chatbot-container">
        <div class="chatbot-body">
          <p><strong>Bot:</strong> Welcome back, Commander. Whatâ€™s your next move?</p>
        </div>
        <div class="chatbot-input">
          <textarea rows="2" placeholder="Type your command..."></textarea>
        </div>
      </div>

      <OpsStreamTickerWrapper />
    </div>
  </body>
</html>
