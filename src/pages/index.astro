---
import ChatbotUI from "../components/ChatbotUI.astro";
import OpsStreamTickerWrapper from "../components/OpsStreamTickerWrapper.astro";
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Motherboard Dash</title>
    <style>
      body {
        margin: 0;
        background-color: #f3f4f6;
        font-family: sans-serif;
      }
      main {
        max-width: 960px;
        margin: 2rem auto;
        background: white;
        border-radius: 8px;
        box-shadow: 0 0 12px rgba(0,0,0,0.05);
        padding: 2rem;
      }
      h1, h2 {
        text-align: center;
        margin: 0;
      }
      h2 {
        color: #666;
        font-size: 1rem;
        margin-bottom: 2rem;
      }
    </style>
  </head>
  <body>
    <main>
      <h1>Motherboard Dash</h1>
      <h2>Command Console</h2>
      <ChatbotUI />
      <div style="margin-top: 2rem;">
        <OpsStreamTickerWrapper />
      </div>
    </main>
  </body>
</html>
