---
import Chatbot from '../components/Chatbot.tsx';
import ProjectTracker from '../components/ProjectTracker.tsx';
import Tabs from '../components/Tabs.tsx';
import Tick from '../components/Tick.tsx';
import Badge from '../components/Badge.tsx';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Motherboard Dash</title>
  </head>
  <body style="display: flex; justify-content: center; padding: 2rem; font-family: sans-serif; background-color: #fff;">
    <div style="max-width: 800px; width: 100%; display: flex; flex-direction: column; gap: 2rem;">
      <header style="text-align: center;">
        <h1 style="font-size: 2.5rem; font-weight: 700; margin: 0;">Motherboard Dash</h1>
        <p style="font-style: italic;">Command Console</p>
      </header>

      <div style="padding: 1rem; border: 1px solid #eee; border-radius: 10px; background: #fafafa;">
        <Chatbot />
      </div>

      <div style="display: flex; flex-direction: column; gap: 1rem; align-items: center;">
        <Badge />
        <Tick />
      </div>

      <div style="padding: 1rem; border-radius: 10px; background: #fafafa;">
        <Tabs />
        <ProjectTracker />
      </div>
    </div>
  </body>
</html>
