---
import ChatbotWrapper from "../components/ChatbotWrapper.astro";
---

<html lang="en">
  <head>
    <title>Motherboard Dash</title>
    <meta charset="UTF-8" />
  </head>
  <body class="bg-gray-100 min-h-screen flex items-center justify-center">
    <main class="w-full max-w-4xl mx-auto p-6 space-y-6">
      <div class="bg-white p-8 rounded-xl shadow-md text-center space-y-2">
        <h1 class="text-4xl font-bold">Motherboard Dash</h1>
        <p class="text-lg text-gray-600">Command Console</p>
      </div>

      <div class="bg-white p-6 rounded-xl shadow-md space-y-4">
