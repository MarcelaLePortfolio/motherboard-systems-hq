---
import Chatbot from "../components/Chatbot.tsx";
import ProjectTracker from "../components/ProjectTracker.tsx";
import Tabs from "../components/Tabs.tsx";
import Tick from "../components/Tick.tsx";
import Badge from "../components/Badge.tsx";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Motherboard Dash</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body style="margin: 0; font-family: sans-serif; background: #f9f9f9;">
    <main style="max-width: 960px; margin: 0 auto; padding: 2rem; display: flex; flex-direction: column; gap: 2rem;">
      <header style="text-align: center;">
        <h1 style="margin: 0; font-size: 2.5rem; font-weight: bold;">Motherboard Dash</h1>
        <p style="font-style: italic; color: #666;">Command Console</p>
      </header>

      <section style="border-radius: 10px; background: white; box-shadow: 0 0 10px rgba(0,0,0,0.05); padding: 1rem;">
        <Chatbot />
      </section>

      <section style="display: flex; flex-direction: column; gap: 1rem; align-items: center;">
        <Badge />
        <Tick />
      </section>

      <section style="border-radius: 10px; background: white; box-shadow: 0 0 10px rgba(0,0,0,0.05); padding: 1rem;">
        <Tabs />
        <ProjectTracker />
      </section>
    </main>
  </body>
</html>
