---
import AgentStatusRow from '../components/AgentStatusRow.tsx';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Motherboard Systems HQ</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body class="bg-white text-black font-sans">
    <main class="max-w-2xl mx-auto p-6">
      <AgentStatusRow client:load />

      <div class="mt-10">
        <div class="flex space-x-6 justify-center border-b pb-2 mb-3 font-medium">
          <button class="text-violet-600 border-b-2 border-violet-600 pb-1">Project Activity</button>
          <button class="text-gray-600">Tasks</button>
          <button class="text-gray-600">Settings</button>
        </div>

        <h2 class="text-xl font-semibold mb-4">Project Tracker</h2>
        <ul class="space-y-3">
          {
            [
              { label: "Design new homepage", color: "bg-blue-600" },
              { label: "Prepare investor presentation", color: "bg-blue-600" },
              { label: "Implement authentication", color: "bg-teal-400" },
              { label: "Conduct user interviews", color: "bg-gray-400" },
            ].map(task => (
              <li class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <span class={`w-3 h-3 rounded-full ${task.color}`}></span>
                  <span>{task.label}</span>
                </div>
                <button class="px-3 py-1 text-sm border border-gray-300 rounded-md hover:bg-gray-50">
                  Request Modification
                </button>
              </li>
            ))
          }
        </ul>
      </div>
    </main>
  </body>
</html>
