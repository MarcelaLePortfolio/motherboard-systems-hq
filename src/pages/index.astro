---
import React from 'react';
import { Fragment } from 'react';
import { renderToString } from 'react-dom/server';

const agents = [
  { name: 'Matilda', emoji: '📡', status: 'online' },
  { name: 'Cade', emoji: '🛠️', status: 'online' },
  { name: 'Effie', emoji: '🖥️', status: 'online' },
];

function AgentStatusRow() {
  return (
    <div className="flex justify-around mb-4">
      {agents.map((agent) => (
        <div key={agent.name} className="flex items-center space-x-2">
          <span className="text-xl">{agent.emoji}</span>
          <span className="text-sm font-medium">{agent.name}</span>
          <span className={`w-2 h-2 rounded-full ${agent.status === 'online' ? 'bg-green-500' : 'bg-gray-400'}`}></span>
        </div>
      ))}
    </div>
  );
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Motherboard Systems HQ</title>
  </head>
  <body class="bg-white text-black p-6">
    <main class="max-w-2xl mx-auto">
      <h1 class="text-3xl font-bold mb-4">Motherboard Systems HQ</h1>

      <!-- Full inline AgentStatusRow rendered at runtime -->
      <div client:only="react">
        <AgentStatusRow />
      </div>

      <div class="mt-10">
        <div class="flex space-x-6 justify-center border-b pb-2 mb-3 font-medium">
          <button class="text-violet-600 border-b-2 border-violet-600 pb-1">Project Activity</button>
          <button class="text-gray-600">Tasks</button>
          <button class="text-gray-600">Settings</button>
        </div>

        <h2 class="text-xl font-semibold mb-4">Project Tracker</h2>
      </div>
    </main>
  </body>
</html>
