---
import ChatbotWrapper from "../components/ChatbotWrapper.astro";
import OpsStreamTickerWrapper from "../components/OpsStreamTickerWrapper.astro";
---

<html lang="en">
  <head>
    <title>Motherboard Dash</title>
    <meta charset="UTF-8" />
  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col items-center justify-start py-10">
    <div class="w-full max-w-4xl px-4 space-y-6">
      <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-900">Motherboard Dash</h1>
        <p class="text-md text-gray-500">Command Console</p>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <ChatbotWrapper />
      </div>

      <div class="bg-black text-white text-sm font-mono py-2 px-4 rounded text-center">
        <OpsStreamTickerWrapper />
      </div>

      <p class="text-center text-gray-500 text-sm">
        Agent Ops and Runtime Logs will appear here shortly.
      </p>
    </div>
  </body>
</html>
