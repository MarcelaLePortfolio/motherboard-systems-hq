import fetch from "node-fetch";

const OLLAMA_HOST = "http://127.0.0.1:11434";

export const startMatilda = {
  handleMessage: async (message: string) => {
    try {
      const response = await fetch(`${OLLAMA_HOST}/api/generate`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ model: "gemma3:4b", prompt: message }),
      });

      const text = await response.text(); // raw streamed text
      console.log("üì° Raw Ollama response:", text);

      // Split by line and parse each JSON object
      const lines = text.split("\n").filter(line => line.trim().length > 0);
      let fullResponse = "";
      for (const line of lines) {
        try {
          const obj = JSON.parse(line);
          if (obj.response) fullResponse += obj.response;
        } catch {
          // ignore malformed lines
        }
      }

      if (!fullResponse) fullResponse = "üí¨ Matilda received response, but no output.";
      return fullResponse;

    } catch (err) {
      console.error("‚ùå Matilda Ollama API error:", err);
      throw err;
    }
  },
};
