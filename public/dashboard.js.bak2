// ‚úÖ Attach listener safely
function attachDelegateListener() {
  const delegateBtn = document.getElementById("delegate-btn");
  if (!delegateBtn) {
    console.warn("Delegate button not yet in DOM, retrying...");
    setTimeout(attachDelegateListener, 100);
    return;
  }
  delegateBtn.addEventListener("click", delegateTask);
  console.log("‚úÖ Delegate listener attached");
}

attachDelegateListener();
