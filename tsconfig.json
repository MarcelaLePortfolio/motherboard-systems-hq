{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "scripts/agents/cade.ts",
    "scripts/agents/matilda-handler.ts",
    "scripts/utils/**/*",
    "server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "db/task-db.backup.ts",
    "db/task-db.ts",
    "mirror/agent.ts",
    "scripts/_local/**/*",
    "scripts/agents/cade.mts",
    "scripts/agents/dispatch-queued-task.ts",
    "scripts/agents/effie.ts",
    "scripts/agents/matilda.ts",
    "scripts/agents/utils/payload-schemas.ts",
    "scripts/agents/utils/reflect.ts",
    "scripts/test/**/*"
  ]
}
