{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "scripts",
    "agents",
    "mirror",
    "db",
    "pages",
    "app",
    "components",
    "lib"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
