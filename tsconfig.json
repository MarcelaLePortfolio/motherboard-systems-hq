{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "outDir": "dist",
    "rootDir": "."
  },
  "include": ["**/*.ts", "types/**/*.d.ts"]
}
