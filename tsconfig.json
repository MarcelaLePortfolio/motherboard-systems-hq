{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist"
  },
  "include": ["server.ts", "routes/**/*.ts", "scripts/**/*.ts"]
}
