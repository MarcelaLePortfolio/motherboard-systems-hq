{
"$schema": "https://json-schema.org/draft/2020-12/schema",
"title": "Clara plan.json schema",
"type": "object",
"required": ["initiative", "workstreams", "milestones"],
"properties": {
"initiative": { "type": "string", "minLength": 1 },
"objective": { "type": "string" },
"constraints": {
"type": "object",
"properties": {
"deadline": { "type": "string" },
"capacity": { "type": "string" },
"assumptions": { "type": "array", "items": { "type": "string" } }
},
"additionalProperties": true
},
"workstreams": {
"type": "array",
"items": {
"type": "object",
"required": ["id", "title", "tasks"],
"properties": {
"id": { "type": "string" },
"title": { "type": "string" },
"owner": { "type": "string" },
"tasks": {
"type": "array",
"items": {
"type": "object",
"required": ["id", "title"],
"properties": {
"id": { "type": "string" },
"title": { "type": "string" },
"owner": { "type": "string", "description": "Matilda maps owner to Cade/Effie/User" },
"acceptance": { "type": "array", "items": { "type": "string" } },
"depends_on": { "type": "array", "items": { "type": "string" } },
"estimate": { "type": "string" },
"priority": { "type": "string", "enum": ["H","M","L"] },
"notes": { "type": "string" }
},
"additionalProperties": false
}
}
},
"additionalProperties": false
}
},
"dependencies": {
"type": "array",
"items": { "type": "array", "items": { "type": "string" }, "minItems": 2, "maxItems": 2 }
},
"milestones": {
"type": "array",
"items": {
"type": "object",
"required": ["id", "title"],
"properties": {
"id": { "type": "string" },
"title": { "type": "string" },
"criteria": { "type": "array", "items": { "type": "string" } },
"target": { "type": "string" }
},
"additionalProperties": false
}
},
"risks": {
"type": "array",
"items": {
"type": "object",
"required": ["id", "note"],
"properties": {
"id": { "type": "string" },
"note": { "type": "string" },
"severity": { "type": "string", "enum": ["low","medium","high"] },
"mitigation": { "type": "string" }
},
"additionalProperties": false
}
},
"critical_path": { "type": "array", "items": { "type": "string" } },
"tracker_sections": {
"type": "object",
"properties": {
"backlog_html": { "type": "string" },
"in_progress_html": { "type": "string" },
"completed_html": { "type": "string" }
},
"additionalProperties": false
}
},
"additionalProperties": true
}
